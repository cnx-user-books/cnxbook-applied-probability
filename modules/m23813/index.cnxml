              <m:mspace width="4pt"/>
              <m:mi mathvariant="normal">a</m:mi>
              <m:mo>.</m:mo>
              <m:mi mathvariant="normal">s</m:mi>
              <m:mo>.</m:mo>
              <m:mspace width="0.166667em"/>
              <m:mspace width="0.277778em"/>
              <m:mtext>for</m:mtext>
              <m:mspace width="4.pt"/>
              <m:mtext>all</m:mtext>
              <m:mspace width="4.pt"/>
              <m:mtext>Borel</m:mtext>
              <m:mspace width="4.pt"/>
              <m:mtext>sets</m:mtext>
              <m:mspace width="0.277778em"/>
              <m:mi>M</m:mi>
              <m:mo>,</m:mo>
              <m:mspace width="0.277778em"/>
              <m:mi>N</m:mi>
            </m:mrow>
          </m:math>
        </para>
        <para id="eip-id13155372">
          <emphasis effect="bold">(CI5) </emphasis>
          <m:math overflow="scroll">
            <m:mrow>
              <m:mi>E</m:mi>
              <m:mo>[</m:mo>
              <m:mi>g</m:mi>
              <m:mo>(</m:mo>
              <m:mi>X</m:mi>
              <m:mo>,</m:mo>
              <m:mspace width="0.166667em"/>
