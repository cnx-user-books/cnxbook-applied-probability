              </m:mrow>
              <m:mspace width="4pt"/>
              <m:mi mathvariant="normal">a</m:mi>
              <m:mo>.</m:mo>
              <m:mi mathvariant="normal">s</m:mi>
              <m:mo>.</m:mo>
              <m:mspace width="0.166667em"/>
              <m:mspace width="0.277778em"/>
              <m:mtext>for</m:mtext>
              <m:mspace width="4.pt"/>
              <m:mtext>all</m:mtext>
              <m:mspace width="4.pt"/>
              <m:mtext>Borel</m:mtext>
              <m:mspace width="4.pt"/>
