                  <m:mo>)</m:mo>
                </m:mrow>
                <m:mo>|</m:mo>
                <m:mi>Z</m:mi>
                <m:mo>]</m:mo>
              </m:mrow>
              <m:mi>E</m:mi>
              <m:mrow>
                <m:mo>[</m:mo>
                <m:msub>
                  <m:mi>I</m:mi>
                  <m:mi>N</m:mi>
                </m:msub>
                <m:mrow>
                  <m:mo>(</m:mo>
