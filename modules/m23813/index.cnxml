              <m:mspace width="0.166667em"/>
              <m:mi>u</m:mi>
              <m:mo>)</m:mo>
            </m:mrow>
            <m:mo>=</m:mo>
            <m:msub>
              <m:mi>f</m:mi>
              <m:mrow>
                <m:mi>W</m:mi>
                <m:mo>|</m:mo>
                <m:mi>H</m:mi>
              </m:mrow>
            </m:msub>
            <m:mrow>
              <m:mo>(</m:mo>
              <m:mi>t</m:mi>
              <m:mo>|</m:mo>
              <m:mi>u</m:mi>
              <m:mo>)</m:mo>
