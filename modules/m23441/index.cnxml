            </m:mrow>
          </m:mrow>
        </m:math>
      </equation>
      <equation id="id237144">
        <m:math overflow="scroll" mode="display">
          <m:mrow>
            <m:mo>=</m:mo>
            <m:mi>D</m:mi>
            <m:mrow>
              <m:mo>(</m:mo>
              <m:mi>p</m:mi>
              <m:mo>-</m:mo>
              <m:mi>s</m:mi>
              <m:mo>)</m:mo>
            </m:mrow>
            <m:mo>+</m:mo>
            <m:mi>m</m:mi>
            <m:mrow>
              <m:mo>(</m:mo>
