              <m:mo>+</m:mo>
              <m:mn>1</m:mn>
              <m:mo>)</m:mo>
            </m:mrow>
            <m:msup>
              <m:mrow>
                <m:mo>(</m:mo>
                <m:mi>λ</m:mi>
                <m:mo>+</m:mo>
                <m:mi>n</m:mi>
                <m:mo>)</m:mo>
              </m:mrow>
              <m:mrow>
                <m:msup>
                  <m:mi>k</m:mi>
                  <m:mo>*</m:mo>
                </m:msup>
                <m:mo>+</m:mo>
                <m:mi>m</m:mi>
                <m:mo>+</m:mo>
                <m:mn>1</m:mn>
