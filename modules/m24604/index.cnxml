                <m:mo>+</m:mo>
                <m:mi>n</m:mi>
                <m:mo>)</m:mo>
              </m:mrow>
              <m:mrow>
                <m:msup>
                  <m:mi>k</m:mi>
                  <m:mo>*</m:mo>
                </m:msup>
                <m:mo>+</m:mo>
                <m:mi>m</m:mi>
              </m:mrow>
            </m:msup>
            <m:mrow>
              <m:mi>Γ</m:mi>
              <m:mo>(</m:mo>
              <m:mi>m</m:mi>
              <m:mo>+</m:mo>
              <m:msup>
                <m:mi>k</m:mi>
                <m:mo>*</m:mo>
              </m:msup>
              <m:mo>)</m:mo>
            </m:mrow>
          </m:mfrac>
          <m:mo>=</m:mo>
          <m:mfrac>
