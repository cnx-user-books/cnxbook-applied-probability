      </equation>
      <para id="id229870">Similarly,</para>
      <equation id="id229876"><m:math overflow="scroll" mode="display">
          <m:mrow>
            <m:mi>P</m:mi>
            <m:mrow>
              <m:mo>(</m:mo>
              <m:msub>
                <m:mi>H</m:mi>
                <m:mn>2</m:mn>
              </m:msub>
              <m:mo>|</m:mo>
              <m:msup>
                <m:mi>F</m:mi>
                <m:mi>c</m:mi>
              </m:msup>
              <m:mo>)</m:mo>
            </m:mrow>
            <m:mo>=</m:mo>
            <m:mfrac>
              <m:mrow>
                <m:mi>P</m:mi>
                <m:mrow>
                  <m:mo>(</m:mo>
                  <m:msup>
                    <m:mi>F</m:mi>
                    <m:mi>c</m:mi>
                  </m:msup>
                  <m:mo>|</m:mo>
                  <m:msub>
                    <m:mi>H</m:mi>
