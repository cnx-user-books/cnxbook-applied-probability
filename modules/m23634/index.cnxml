              <m:mi>t</m:mi>
              <m:mn>2</m:mn>
            </m:msup>
            <m:mo>+</m:mo>
            <m:msub>
              <m:mi>I</m:mi>
              <m:mi>N</m:mi>
            </m:msub>
            <m:mrow>
              <m:mo>(</m:mo>
              <m:mi>t</m:mi>
              <m:mo>)</m:mo>
            </m:mrow>
            <m:mn>2</m:mn>
            <m:mi>E</m:mi>
            <m:mrow>
              <m:mo>[</m:mo>
              <m:mi>Y</m:mi>
              <m:mo>|</m:mo>
              <m:mi>X</m:mi>
              <m:mo>=</m:mo>
              <m:mi>t</m:mi>
              <m:mo>]</m:mo>
            </m:mrow>
          </m:mrow>
        </m:math>
      </equation>
      <para id="id276801">Now</para>
      <equation id="id276806">
        <m:math overflow="scroll" mode="display">
          <m:mrow>
            <m:mi>E</m:mi>
            <m:mrow>
              <m:mo>[</m:mo>
              <m:mi>Y</m:mi>
              <m:mo>|</m:mo>
              <m:mi>X</m:mi>
              <m:mo>=</m:mo>
              <m:mi>t</m:mi>
              <m:mo>]</m:mo>
            </m:mrow>
            <m:mo>=</m:mo>
            <m:mo>∫</m:mo>
            <m:mi>u</m:mi>
            <m:msub>
              <m:mi>f</m:mi>
              <m:mrow>
                <m:mi>Y</m:mi>
