              <m:mo>+</m:mo>
              <m:mi>E</m:mi>
              <m:mo>[</m:mo>
            </m:mrow>
            <m:msub>
              <m:mi>I</m:mi>
              <m:mi>N</m:mi>
            </m:msub>
            <m:mrow>
              <m:mrow>
                <m:mo>(</m:mo>
                <m:mi>X</m:mi>
                <m:mo>)</m:mo>
              </m:mrow>
              <m:mn>2</m:mn>
              <m:mi>Y</m:mi>
              <m:mo>|</m:mo>
              <m:mo>|</m:mo>
              <m:mi>X</m:mi>
              <m:mo>=</m:mo>
              <m:mi>t</m:mi>
              <m:mo>]</m:mo>
              <m:mo>=</m:mo>
            </m:mrow>
            <m:msub>
              <m:mi>I</m:mi>
              <m:mi>M</m:mi>
            </m:msub>
            <m:mrow>
              <m:mo>(</m:mo>
              <m:mi>t</m:mi>
              <m:mo>)</m:mo>
