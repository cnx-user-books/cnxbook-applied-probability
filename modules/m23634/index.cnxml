      <para id="id277776">Consider</para>
      <equation id="id277782">
        <m:math overflow="scroll" mode="display">
          <m:mrow>
            <m:mi>Z</m:mi>
            <m:mo>=</m:mo>
            <m:mfenced separators="" open="{" close="">
              <m:mtable>
