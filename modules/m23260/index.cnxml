                <m:munderover>
                  <m:mo>⋁</m:mo>
                  <m:mrow>
                    <m:mi>i</m:mi>
                    <m:mo>=</m:mo>
                    <m:mn>1</m:mn>
                  </m:mrow>
                  <m:mi>∞</m:mi>
                </m:munderover>
               
              </m:mrow>
              <m:mspace width="0.166667em"/>
              <m:mspace width="0.166667em"/>
              <m:msup>
                <m:mi>X</m:mi>
                <m:mrow>
                  <m:mo>-</m:mo>
