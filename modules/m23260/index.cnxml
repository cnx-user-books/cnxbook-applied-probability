                <m:mo>(</m:mo>
                <m:mspace width="0.166667em"/>
                <m:mrow>
                  <m:munderover>
                    <m:mo>⋁</m:mo>
                    <m:mrow>
                      <m:mi>i</m:mi>
                      <m:mo>=</m:mo>
                      <m:mn>1</m:mn>
                    </m:mrow>
                    <m:mi>∞</m:mi>
                  </m:munderover>
                  
                </m:mrow>
                <m:mspace width="0.166667em"/>
                <m:mspace width="0.166667em"/>
                <m:msub>
                  <m:mi>M</m:mi>
                  <m:mi>i</m:mi>
                </m:msub>
                <m:mo>)</m:mo>
              </m:mrow>
            </m:mfenced>
            <m:mo>=</m:mo>
            <m:mi>P</m:mi>
            <m:mfenced separators="" open="(" close=")">
              <m:mspace width="0.166667em"/>
