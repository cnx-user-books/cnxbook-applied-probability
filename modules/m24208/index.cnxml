PB = [0.2 0.6 0.2];
 pa= rowcopy(PA,3);
 pb = colcopy(PB,3);
 P = pa.*pb            % Probabilities for various values
P =  0.0600    0.1200    0.0200
     0.1800    0.3600    0.0600
     0.0600    0.1200    0.0200
[Z,PZ] = csort(Z,P);
